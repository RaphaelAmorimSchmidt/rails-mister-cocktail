<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div class="container h-100 ">

    <h1 class="d-inline-flex"><%= @cocktail.name %></h1>
    <div class="d-inline-flex">
      <%= link_to cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure?' },class: "mx-3" do %>
        <i class="fas fa-trash"></i>
      <% end %>
      <%= link_to cocktails_path do %>
        <i class="far fa-edit"></i>
      <% end %>
    </div>
    <% @cocktail.doses.each do |dose| %>
      <p class="mb-0"><%= "#{dose.description}  #{dose.ingredient.name}  "%><%= link_to edit_dose_path(dose) do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to dose_path(dose), method: :delete do %>
          <i class="fas fa-trash"></i>
        <% end %>
      </p>
    <% end %>
    <%= link_to "New dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>
</div>


