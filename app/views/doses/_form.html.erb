<%= simple_form_for [@cocktail, @dose] do |form| %>
  <%= form.input :description %>
  <%= form.input :ingredient, collection: Ingredient.all.order(:name), input_html: { multiple: true, class: 'select2'}, include_hidden: false %>
  <div class="form-actions btn btn-success mb-2 p-0">
    <%= form.button :submit %>
  </div>
<% end %>
